# Server
NODE_ENV=production
PORT=4000

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/safecheck?retryWrites=true&w=majority

# Security
JWT_SECRET=your_super_secure_random_string_min_32_chars
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=sk-prod-your-actual-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Cashfree Production
CASHFREE_APP_ID=prod_app_id_from_cashfree_dashboard
CASHFREE_SECRET=prod_secret_key_from_cashfree
CASHFREE_MODE=PRODUCTION
MOCK_CASHFREE=false

# URLs
ALLOWED_ORIGINS=https://safecheck.example.com,https://www.safecheck.example.com
FRONTEND_URL=https://safecheck.example.com
BACKEND_URL=https://api.safecheck.example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OCR
OCR_TMP_DIR=/tmp/ocr
OCR_LANGUAGE=eng

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/safecheck/app.log