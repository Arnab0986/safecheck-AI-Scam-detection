# ===============================
# üî• SERVER CONFIG
# ===============================
PORT=4000

# Comma-separated allowed frontend domains
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com


# ===============================
# üî• MONGODB CONFIG
# ===============================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/safecheck?retryWrites=true&w=majority


# ===============================
# üîê JWT AUTH CONFIG
# ===============================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d


# ===============================
# üî• RATE LIMITING
# ===============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100


# ===============================
# ü§ñ AI / SCAN CONFIG
# ===============================
OPENAI_API_KEY=your_openai_api_key


# ===============================
# üìÑ OCR CONFIG
# ===============================
