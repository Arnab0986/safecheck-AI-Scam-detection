# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGO_URI=mongodb://mongo:27017/safecheck

# Authentication
JWT_SECRET=change_me_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Cashfree Payments
CASHFREE_APP_ID=test_app_id
CASHFREE_SECRET=test_secret_key
CASHFREE_MODE=TEST
MOCK_CASHFREE=true

# OCR Configuration
OCR_TMP_DIR=/tmp/ocr
OCR_LANGUAGE=eng

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log