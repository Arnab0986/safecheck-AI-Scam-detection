# ------------------------
# Server Configuration
# ------------------------
PORT=10000
NODE_ENV=production

# ------------------------
# Database
# ------------------------
MONGO_URI=your_mongo_db_connection_url

# ------------------------
# Authentication
# ------------------------
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# ------------------------
# OpenAI
# ------------------------
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# ------------------------
# Cashfree Payments
# ------------------------
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET=your_cashfree_secret
CASHFREE_MODE=PROD
MOCK_CASHFREE=false

# ------------------------
# OCR Configuration
# ------------------------
OCR_TMP_DIR=/tmp/ocr
OCR_LANGUAGE=eng

# ------------------------
# Security (CORS)
# Add the deployed Vercel frontend domain here.
# Example:
# ALLOWED_ORIGINS=https://your-frontend.vercel.app
# Multiple origins: ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173
# ------------------------
ALLOWED_ORIGINS=http://localhost:5173

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------
# Logging
# ------------------------
LOG_LEVEL=info
LOG_FILE=logs/app.log
